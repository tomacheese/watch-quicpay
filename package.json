{
  "name": "watch-quicpay",
  "version": "1.0.0",
  "description": "Notify new campaign information added to the QUICPay campaign list page via Discord.",
  "homepage": "https://github.com/tomacheese/watch-quicpay",
  "bugs": {
    "url": "https://github.com/tomacheese/watch-quicpay/issues"
  },
  "license": "MIT",
  "author": "Tomachi",
  "private": true,
  "main": "dist/main.js",
  "repository": {
    "url": "git@github.com:tomacheese/watch-quicpay.git",
    "type": "git"
  },
  "scripts": {
    "generate-schema": "typescript-json-schema --required tsconfig.json Configuration -o schema/Configuration.json",
    "test": "jest",
    "lint:prettier": "prettier --check src",
    "lint:tsc": "tsc",
    "fix:eslint": "eslint . -c eslint.config.mjs --fix",
    "fix:prettier": "prettier --write src",
    "preinstall": "npx only-allow pnpm",
    "start": "tsx ./src/main.ts",
    "dev": "tsx watch ./src/main.ts",
    "lint": "run-z lint:prettier,lint:eslint,lint:tsc",
    "lint:eslint": "eslint . -c eslint.config.mjs",
    "fix": "run-z fix:prettier,fix:eslint"
  },
  "devDependencies": {
    "@book000/eslint-config": "1.9.15",
    "@book000/node-utils": "1.18.43",
    "@types/jest": "30.0.0",
    "@types/node": "24.0.4",
    "axios": "1.10.0",
    "cheerio": "1.1.0",
    "eslint": "9.29.0",
    "eslint-config-standard": "17.1.0",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-n": "17.20.0",
    "eslint-plugin-promise": "7.2.1",
    "jest": "30.0.3",
    "prettier": "3.6.1",
    "run-z": "2.1.0",
    "ts-jest": "29.4.0",
    "tsx": "4.20.3",
    "typescript": "5.8.3",
    "typescript-json-schema": "0.65.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "moduleNameMapper": {
      "@/(.+)": "<rootDir>/src/$1"
    },
    "transform": {
      ".+\\.ts$": [
        "ts-jest",
        {
          "tsconfig": "tsconfig.json"
        }
      ]
    },
    "testMatch": [
      "**/*.test.ts"
    ]
  },
  "packageManager": "pnpm@10.12.4+sha512.5ea8b0deed94ed68691c9bad4c955492705c5eeb8a87ef86bc62c74a26b037b08ff9570f108b2e4dbd1dd1a9186fea925e527f141c648e85af45631074680184",
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}
