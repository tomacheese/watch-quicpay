{
  "name": "watch-quicpay",
  "version": "1.0.0",
  "description": "Notify new campaign information added to the QUICPay campaign list page via Discord.",
  "homepage": "https://github.com/tomacheese/watch-quicpay",
  "bugs": {
    "url": "https://github.com/tomacheese/watch-quicpay/issues"
  },
  "license": "MIT",
  "author": "Tomachi",
  "private": true,
  "main": "dist/main.js",
  "repository": {
    "url": "git@github.com:tomacheese/watch-quicpay.git",
    "type": "git"
  },
  "scripts": {
    "generate-schema": "typescript-json-schema --required tsconfig.json Configuration -o schema/Configuration.json",
    "test": "jest",
    "lint:prettier": "prettier --check src",
    "lint:tsc": "tsc",
    "fix:eslint": "eslint . -c eslint.config.mjs --fix",
    "fix:prettier": "prettier --write src",
    "preinstall": "npx only-allow pnpm",
    "start": "tsx ./src/main.ts",
    "dev": "tsx watch ./src/main.ts",
    "lint": "run-z lint:prettier,lint:eslint,lint:tsc",
    "lint:eslint": "eslint . -c eslint.config.mjs",
    "fix": "run-z fix:prettier,fix:eslint"
  },
  "devDependencies": {
    "@book000/eslint-config": "1.8.23",
    "@book000/node-utils": "1.14.35",
    "@types/cheerio": "0.22.35",
    "@types/jest": "29.5.14",
    "@types/node": "22.13.10",
    "axios": "1.8.3",
    "cheerio": "1.0.0",
    "eslint": "9.22.0",
    "eslint-config-standard": "17.1.0",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-n": "17.16.2",
    "eslint-plugin-promise": "7.2.1",
    "jest": "29.7.0",
    "prettier": "3.5.3",
    "run-z": "2.1.0",
    "ts-jest": "29.2.6",
    "tsx": "4.19.3",
    "typescript": "5.8.2",
    "typescript-json-schema": "0.65.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "moduleNameMapper": {
      "@/(.+)": "<rootDir>/src/$1"
    },
    "transform": {
      ".+\\.ts$": [
        "ts-jest",
        {
          "tsconfig": "tsconfig.json"
        }
      ]
    },
    "testMatch": [
      "**/*.test.ts"
    ]
  },
  "packageManager": "pnpm@10.6.3+sha512.bb45e34d50a9a76e858a95837301bfb6bd6d35aea2c5d52094fa497a467c43f5c440103ce2511e9e0a2f89c3d6071baac3358fc68ac6fb75e2ceb3d2736065e6",
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}
