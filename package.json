{
  "name": "watch-quicpay",
  "version": "1.0.0",
  "description": "Notify new campaign information added to the QUICPay campaign list page via Discord.",
  "homepage": "https://github.com/tomacheese/watch-quicpay",
  "bugs": {
    "url": "https://github.com/tomacheese/watch-quicpay/issues"
  },
  "license": "MIT",
  "author": "Tomachi",
  "private": true,
  "main": "dist/main.js",
  "repository": {
    "url": "git@github.com:tomacheese/watch-quicpay.git",
    "type": "git"
  },
  "scripts": {
    "generate-schema": "typescript-json-schema --required tsconfig.json Configuration -o schema/Configuration.json",
    "test": "jest",
    "lint:prettier": "prettier --check src",
    "lint:tsc": "tsc",
    "fix:eslint": "eslint . -c eslint.config.mjs --fix",
    "fix:prettier": "prettier --write src",
    "preinstall": "npx only-allow pnpm",
    "start": "tsx ./src/main.ts",
    "dev": "tsx watch ./src/main.ts",
    "lint": "run-z lint:prettier,lint:eslint,lint:tsc",
    "lint:eslint": "eslint . -c eslint.config.mjs",
    "fix": "run-z fix:prettier,fix:eslint"
  },
  "devDependencies": {
    "@book000/eslint-config": "1.13.4",
    "@book000/node-utils": "1.24.63",
    "@types/jest": "30.0.0",
    "@types/node": "24.10.13",
    "axios": "1.13.5",
    "cheerio": "1.2.0",
    "eslint": "10.0.0",
    "eslint-config-standard": "17.1.0",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-n": "17.24.0",
    "eslint-plugin-promise": "7.2.1",
    "jest": "30.2.0",
    "prettier": "3.8.1",
    "run-z": "2.1.0",
    "ts-jest": "29.4.6",
    "tsx": "4.21.0",
    "typescript": "5.9.3",
    "typescript-json-schema": "0.67.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "moduleNameMapper": {
      "@/(.+)": "<rootDir>/src/$1"
    },
    "transform": {
      ".+\\.ts$": [
        "ts-jest",
        {
          "tsconfig": "tsconfig.json"
        }
      ]
    },
    "testMatch": [
      "**/*.test.ts"
    ]
  },
  "packageManager": "pnpm@10.30.0+sha512.2b5753de015d480eeb88f5b5b61e0051f05b4301808a82ec8b840c9d2adf7748eb352c83f5c1593ca703ff1017295bc3fdd3119abb9686efc96b9fcb18200937",
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}
